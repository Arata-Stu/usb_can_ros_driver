<launch>
  <node pkg="usb_can_ros_driver" exec="can_sender_node" name="can_sender_node" output="screen">
    <remap from="can_rx" to="send/to_can"/>
    <param name="send_interval_ms" value="10"/>
  </node>

  <node pkg="usb_can_ros_driver" exec="can_receiver_node" name="can_receiver_node" output="screen">
    <remap from="can_tx" to="receive/from_can"/>
    <param name="receive_interval_ms" value="1000"/>
  </node>
</launch>
